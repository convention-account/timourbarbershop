    </header>

    <main class="contact-section checkout-section">
        <div class="contact-wrapper checkout-wrapper">
            <div class="contact-intro">
                <h1 class="headline">
                    <span class="headline-emoji">üí≥</span>
                    <span class="headline-main">Checkout</span>
                    <span class="headline-sub">Complete Your Purchase</span>
                </h1>
            </div>

            <div class="contact-form checkout-form">
                <h2 class="form-title">Checkout Details</h2>
                <form id="checkout-form">
                    <div class="checkout-group">
                        <h3 class="form-subtitle">Shipping Address</h3>
                        <div class="form-group">
                            <label for="full-name">Full Name</label>
                            <input type="text" id="full-name" name="full_name" placeholder="Your Full Name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="Your Email" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Street Address</label>
                            <input type="text" id="address" name="address" placeholder="123 Barber Street" required>
                        </div>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" id="city" name="city" placeholder="Vilnius" required>
                        </div>
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" id="country" name="country" placeholder="Lithuania" required>
                        </div>
                        <div class="form-group">
                            <label for="postal-code">Postal Code</label>
                            <input type="text" id="postal-code" name="postal_code" placeholder="12345" required>
                        </div>
                    </div>

                    <div class="checkout-group">
                        <h3 class="form-subtitle">Payment Method</h3>
                        <div class="form-group">
                            <label>
                                <input type="radio" name="payment_method" value="usdt_trc20" checked>
                                USDT (TRC20)
                            </label>
                            <label inert style="color: rgb(70, 69, 69);">
                                <input type="radio" name="payment_method" value="card">
                                Credit/Debit Card (NOT AVAILABLE AT THE MOMENT)
                            </label>
                        </div>
                        <div class="card-details" style="display: none;">
                            <div class="form-group">
                                <label for="card-number">Card Number</label>
                                <input type="text" id="card-number" name="card_number"
                                    placeholder="1234 5678 9012 3456">
                            </div>
                            <div class="form-group">
                                <label for="card-expiry">Expiry Date</label>
                                <input type="text" id="card-expiry" name="card_expiry" placeholder="MM/YY">
                            </div>
                            <div class="form-group">
                                <label for="card-cvc">CVC</label>
                                <input type="text" id="card-cvc" name="card_cvc" placeholder="123">
                            </div>
                        </div>
                    </div>

                    <div class="checkout-group">
                        <h3 class="form-subtitle">Shipping Method</h3>
                        <div class="shipping-methods">
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="dhl" checked>
                                <img src="../media/lp-express-s.png" alt="LP" class="shipping-icon">
                                <span>LPExpress - 5 USDT (3-5 days) - Baltics regions</span>
                            </label>
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="fedex">
                                <img src="../media/dpd.png" alt="DPD" class="shipping-icon">
                                <span>DPD - 7 USDT (2-4 days) - All Europe</span>
                            </label>
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="ups">
                                <img src="../media/omniva_horizontal_orange-1024x410-1.webp" alt="Omniva"
                                    class="shipping-icon">
                                <span>Omniva - 6 USDT (3-6 days) - Poland and Baltics</span>
                            </label>
                        </div>
                    </div>

                    <div id="cart-summary"></div>

                    <button type="submit" class="form-btn checkout-btn">Place Order</button>
                </form>
                <button class="close-cart" onclick="window.location.href='/webshop'">Back to Store</button>
            </div>
        </div>
    </main>

    <div class="custom-alert" id="custom-alert" style="display: none;">
        <div class="custom-alert-content">
            <p id="custom-alert-message"></p>
            <button class="custom-alert-close">OK</button>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>¬© 2025 Timour Barber. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="/cookie-policy">Privacy Policy</a></li>
                <li><a href="/terms-of-service">Terms of Service</a></li>
                <li><a href="/contact">Contact Us</a></li>
            </ul>
        </div>
    </footer>

    <script>
        // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∫–æ—Ä–∑–∏–Ω—ã –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ —á–µ–∫–∞—É—Ç–∞
        function getCookie(name) {
            const nameEQ = name + "=";
            const cookies = document.cookie.split(';');
            for (let i = 0; i < cookies.length; i++) {
                let cookie = cookies[i].trim();
                if (cookie.indexOf(nameEQ) === 0) {
                    return decodeURIComponent(cookie.substring(nameEQ.length));
                }
            }
            return null;
        }

        let cart;
        try {
            const rawCart = getCookie('cart') || '[]';
            cart = JSON.parse(rawCart);
            console.log('Client-side parsed cart:', cart);
        } catch (error) {
            console.error('Error parsing cart on client:', error.message);
            cart = [];
        }

        const cartSummary = document.getElementById('cart-summary');
        if (cartSummary) {
            console.log('Cart summary element found');
            if (cart.length > 0) {
                let totalUSDT = cart.reduce((sum, item) => sum + parseFloat(item.price), 0);
                cartSummary.innerHTML = `
                    <h3>Your Items:</h3>
                    <ul style="list-style: none; padding: 0;">
                        ${cart.map(item => `<li>${item.title} - ${item.price} USDT</li>`).join('')}
                    </ul>
                    <p><strong>Total (excluding shipping):</strong> ${totalUSDT.toFixed(2)} USDT</p>
                `;
            } else {
                cartSummary.innerHTML = '<p>Your cart is empty. Please add items before checking out.</p>';
                const checkoutBtn = document.querySelector('.checkout-btn');
                if (checkoutBtn) {
                    checkoutBtn.disabled = true;
                    console.log('Checkout button disabled due to empty cart');
                }
            }
        } else {
            console.error('Cart summary element not found');
        }

        const checkoutForm = document.getElementById('checkout-form');
        if (checkoutForm) {
            console.log('Checkout form found, attaching event listener');
            checkoutForm.addEventListener('submit', async (e) => {
                console.log('Form submit event triggered');
                e.preventDefault(); // –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–∞–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—É—é –æ—Ç–ø—Ä–∞–≤–∫—É —Ñ–æ—Ä–º—ã

                const submitButton = checkoutForm.querySelector('button[type="submit"]');
                if (submitButton) {
                    submitButton.disabled = true;
                    submitButton.textContent = 'Processing...';
                }

                const formData = new FormData(checkoutForm);
                const data = Object.fromEntries(formData);
                console.log('Form data being sent:', data);

                try {
                    console.log('Sending fetch request to /checkout');
                    const response = await fetch('/checkout', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    console.log('Server response status:', response.status);
                    console.log('Server response ok:', response.ok);
                    console.log('Server response headers:', response.headers);

                    const text = await response.text();
                    console.log('Raw server response:', text);

                    let result;
                    try {
                        result = JSON.parse(text);
                        console.log('Parsed server response:', result);
                    } catch (jsonError) {
                        console.error('Error parsing server response as JSON:', jsonError.message);
                        console.error('Raw response causing the error:', text);
                        throw new Error('Server returned invalid JSON');
                    }

                    if (response.ok) {
                        console.log('Response is OK, redirecting to:', result.redirect);
                        if (!result.redirect) {
                            console.error('Redirect URL is missing in response:', result);
                            throw new Error('Redirect URL not provided by server');
                        }
                        console.log('Clearing cart cookie');
                        document.cookie = 'cart=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
                        console.log('Performing redirect to:', result.redirect);
                        window.location.href = result.redirect;
                        console.log('Redirect command executed');
                    } else {
                        console.log('Response not OK, showing error:', result.error);
                        alert(result.error || 'An error occurred during checkout');
                        if (submitButton) {
                            submitButton.disabled = false;
                            submitButton.textContent = 'Place Order';
                        }
                    }
                } catch (error) {
                    console.error('Error processing checkout:', error);
                    alert('Error processing checkout: ' + error.message);
                    if (submitButton) {
                        submitButton.disabled = false;
                        submitButton.textContent = 'Place Order';
                    }
                }
            });
        } else {
            console.error('Checkout form not found');
        }
    </script>
    <script src="/js/cart.js"></script>
</body>

</html>