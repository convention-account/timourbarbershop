<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - TimourBarber</title>
    <link rel="icon" type="image/x-icon" href="../media/logo.ico">
    <link rel="stylesheet" type="text/css" href="css/contact.css">
    <link rel="stylesheet" href="css/mobile-adaptation.css">
</head>

<body>
    <div class="background-overlay"></div>
    <header>
        <div class="logo">
            <img src="../media/icon.png" alt="Logo" class="logo-icon">
        </div>
        <nav class="navbar">
            <div class="burger-menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <ul class="nav-list">
                <li><a href="/">Home</a></li>
                <li><a href="academy">Academy</a></li>
                <li><a href="webshop">Store</a></li>
                <li><a href="about">About</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="contact">Contact</a></li>
                <li><a href="job">Job</a></li>
                <li><a href="coin">Coin</a></li>
            </ul>
        </nav>
        <div class="login-nav">
            <% if (user) { %>
                <li>Welcome, <%= user %> | <a href="/profile">Personal Cabinet</a> | <a href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <% } %>
        </div>
        <div class="cart-icon">
            🛒
            <span class="cart-count">0</span>
        </div>
    </header>

    <main class="contact-section checkout-section">
        <div class="contact-wrapper checkout-wrapper">
            <!-- Заголовок -->
            <div class="contact-intro">
                <h1 class="headline">
                    <span class="headline-emoji">💳</span>
                    <span class="headline-main">Checkout</span>
                    <span class="headline-sub">Complete Your Purchase</span>
                </h1>
            </div>

            <!-- Форма checkout -->
            <div class="contact-form checkout-form">
                <h2 class="form-title">Checkout Details</h2>
                <form id="checkout-form" method="POST" action="https://plisio.net/invoice">
                    <!-- Адрес доставки -->
                    <div class="checkout-group">
                        <h3 class="form-subtitle">Shipping Address</h3>
                        <div class="form-group">
                            <label for="full-name">Full Name</label>
                            <input type="text" id="full-name" name="full_name" placeholder="Your Full Name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="Your Email" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Street Address</label>
                            <input type="text" id="address" name="address" placeholder="123 Barber Street" required>
                        </div>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" id="city" name="city" placeholder="Vilnius" required>
                        </div>
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" id="country" name="country" placeholder="Lithuania" required>
                        </div>
                        <div class="form-group">
                            <label for="postal-code">Postal Code</label>
                            <input type="text" id="postal-code" name="postal_code" placeholder="12345" required>
                        </div>
                    </div>

                    <!-- Способы оплаты -->
                    <div class="checkout-group">
                        <h3 class="form-subtitle">Payment Method</h3>
                        <div class="form-group">
                            <label>
                                <input type="radio" name="payment_method" value="usdt_trc20" checked>
                                USDT (TRC20)
                            </label>
                            <label inert style="color: rgb(70, 69, 69);">
                                <input type="radio" name="payment_method" value="card">
                                Credit/Debit Card (NOT AVAILABLE AT THE MOMENT)
                            </label>
                        </div>
                        <!-- Дополнительные поля для карты -->
                        <div class="card-details" style="display: none;">
                            <div class="form-group">
                                <label for="card-number">Card Number</label>
                                <input type="text" id="card-number" name="card_number"
                                    placeholder="1234 5678 9012 3456">
                            </div>
                            <div class="form-group">
                                <label for="card-expiry">Expiry Date</label>
                                <input type="text" id="card-expiry" name="card_expiry" placeholder="MM/YY">
                            </div>
                            <div class="form-group">
                                <label for="card-cvc">CVC</label>
                                <input type="text" id="card-cvc" name="card_cvc" placeholder="123">
                            </div>
                        </div>
                    </div>

                    <!-- Способы доставки -->
                    <div class="checkout-group">
                        <h3 class="form-subtitle">Shipping Method</h3>
                        <div class="shipping-methods">
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="dhl" checked>
                                <img src="../media/lp-express-s.png" alt="LP    " class="shipping-icon">
                                <span>LPExpress - 5 USDT (3-5 days) - Baltics regions</span>
                            </label>
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="fedex">
                                <img src="../media/dpd.png" alt="DPD" class="shipping-icon">
                                <span>DPD - 7 USDT (2-4 days) - All Europe</span>
                            </label>
                            <label class="shipping-option">
                                <input type="radio" name="shipping_method" value="ups">
                                <img src="../media/omniva_horizontal_orange-1024x410-1.webp" alt="Omniva"
                                    class="shipping-icon">
                                <span>Omniva - 6 USDT (3-6 days) - Poland and Baltics</span>
                            </label>
                        </div>
                    </div>

                    <!-- Скрытые поля для Plisio -->
                    <input type="hidden" name="source_currency" value="USDT_TRC20">
                    <input type="hidden" name="source_amount" id="cart-amount" value="0">
                    <input type="hidden" name="order_name" value="Checkout Purchase">
                    <input type="hidden" name="order_number" value="checkout-001">
                    <input type="hidden" name="api_key" value="№">
                    <input type="hidden" name="success_url" value="https://yourdomain.com/success">
                    <input type="hidden" name="cancel_url" value="https://yourdomain.com/webshop">

                    <button type="submit" class="form-btn checkout-btn">Place Order</button>
                </form>
                <button class="close-cart" onclick="window.location.href='/webshop'">Back to Store</button>
            </div>

            <!-- Обзор заказа -->
            <div class="contact-info checkout-info">
                <h2 class="form-title">Order Summary</h2>
                <div class="cart-items" id="checkout-cart-items">
                    <!-- Динамически заполняется через JavaScript -->
                </div>
                <div class="cart-total">
                    <span>Subtotal:</span>
                    <span id="checkout-subtotal">0 USDT</span>
                </div>
                <div class="cart-total">
                    <span>Shipping:</span>
                    <span id="checkout-shipping">5 USDT</span>
                </div>
                <div class="cart-total">
                    <span>Total:</span>
                    <span class="total-price" id="checkout-total">5 USDT</span>
                </div>
            </div>
        </div>
    </main>

    <!-- Стилизованный алерт -->
    <div class="custom-alert" id="custom-alert" style="display: none;">
        <div class="custom-alert-content">
            <p id="custom-alert-message"></p>
            <button class="custom-alert-close">OK</button>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>© 2025 Timour Barber. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </div>
    </footer>

    <!-- Скрипт для управления полями карты и доставкой -->
    <script>
        // Показ/скрытие полей карты
        document.querySelectorAll('input[name="payment_method"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const cardDetails = document.querySelector('.card-details');
                if (this.value === 'card') {
                    cardDetails.style.display = 'block';
                } else {
                    cardDetails.style.display = 'none';
                }
            });
        });

        // Обновление итога в зависимости от способа доставки
        document.querySelectorAll('input[name="shipping_method"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const shippingCosts = {
                    'dhl': 5,
                    'fedex': 7,
                    'ups': 6
                };
                const shippingCost = shippingCosts[this.value];
                const subtotalElement = document.getElementById('checkout-subtotal');
                const shippingElement = document.getElementById('checkout-shipping');
                const totalElement = document.getElementById('checkout-total');
                const subtotal = parseFloat(subtotalElement.textContent);
                const newTotal = subtotal + shippingCost;

                shippingElement.textContent = `${shippingCost} USDT`;
                totalElement.textContent = `${newTotal} USDT`;
                document.getElementById('cart-amount').value = newTotal; // Обновляем скрытое поле для Plisio
            });
        });

        // Функция для получения cookie
        function getCookie(name) {
            const nameEQ = name + "=";
            const cookies = document.cookie.split(';');
            for (let i = 0; i < cookies.length; i++) {
                let cookie = cookies[i].trim();
                if (cookie.indexOf(nameEQ) === 0) {
                    return JSON.parse(decodeURIComponent(cookie.substring(nameEQ.length)));
                }
            }
            return null;
        }

        // Получение корзины из cookies
        const cart = getCookie('cart') || [];

        // Заполнение "Order Summary"
        const cartItemsContainer = document.getElementById('checkout-cart-items');
        const subtotalElement = document.getElementById('checkout-subtotal');
        const shippingElement = document.getElementById('checkout-shipping');
        const totalElement = document.getElementById('checkout-total');

        let subtotal = 0;
        if (cart.length === 0) {
            cartItemsContainer.innerHTML = '<p>Your cart is empty</p>';
        } else {
            cart.forEach(item => {
                subtotal += item.price;
                const cartItem = document.createElement('div');
                cartItem.classList.add('cart-item');
                cartItem.innerHTML = `
                <span class="cart-item-title">${item.title}</span>
                <span class="cart-item-price">${item.price} USDT</span>
            `;
                cartItemsContainer.appendChild(cartItem);
            });
        }

        // Обновление итогов
        const shippingCost = 5; // Стоимость доставки по умолчанию (DHL)
        const total = subtotal + shippingCost;

        subtotalElement.textContent = `${subtotal} USDT`;
        shippingElement.textContent = `${shippingCost} USDT`;
        totalElement.textContent = `${total} USDT`;

        // Обновляем скрытое поле с корзиной
        document.getElementById('cart-items').value = JSON.stringify(cart);

        // Обработка отправки формы через AJAX
        document.getElementById('checkout-form').addEventListener('submit', async (e) => {
            e.preventDefault(); // Предотвращаем стандартную отправку формы

            const formData = new FormData(document.getElementById('checkout-form'));
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    // Перенаправляем на страницу оплаты Plisio
                    const plisioForm = document.createElement('form');
                    plisioForm.method = 'POST';
                    plisioForm.action = 'https://plisio.net/invoice';

                    const fields = {
                        source_currency: 'USDT_TRC20',
                        source_amount: result.amount,
                        order_name: 'Checkout Purchase',
                        order_number: result.order_number,
                        api_key: '№',
                        success_url: 'https://yourdomain.com/success',
                        cancel_url: 'https://yourdomain.com/webshop',
                        redirect: result.redirect
                    };

                    for (const [key, value] of Object.entries(fields)) {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = key;
                        input.value = value;
                        plisioForm.appendChild(input);
                    }

                    document.body.appendChild(plisioForm);
                    plisioForm.submit();
                } else {
                    alert(result.error);
                }
            } catch (error) {
                alert('Order transaction failed');
                console.error(error);
            }
        });
    </script>
    <script src="js/script.js"></script>
    <script src="/js/cart.js"></script>
</body>

</html>